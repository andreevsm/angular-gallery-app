{
  "name": "angular-gallery-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "lint": "tslint src/**/**/*.ts --fix",
    "stylelint": "stylelint src/**/*.css",
    "hooks:commit": "lint-staged",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.13",
    "@angular/common": "~8.2.13",
    "@angular/compiler": "~8.2.13",
    "@angular/core": "~8.2.13",
    "@angular/forms": "~8.2.13",
    "@angular/platform-browser": "~8.2.13",
    "@angular/platform-browser-dynamic": "~8.2.13",
    "@angular/router": "~8.2.13",
    "core-js": "^2.5.4",
    "rxjs": "~6.5.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.18",
    "@angular/cli": "~8.3.18",
    "@angular/compiler-cli": "~8.2.13",
    "@angular/language-service": "~8.2.13",
    "@types/node": "~8.9.4",
    "gh-pages": "^2.1.1",
    "ghooks": "^2.0.4",
    "lint-staged": "^9.4.2",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "ts-node": "~7.0.0",
    "tslint": "^5.11.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-defocus": "^2.0.6",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-rxjs-subject-restrictions-rule": "^1.0.4",
    "typescript": "~3.5.3"
  },
  "lint-staged": {
    "*.ts": "npm run lint",
    "*.@(scss|css)": "npm run stylelint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run hooks:commit"
    }
  }
}
